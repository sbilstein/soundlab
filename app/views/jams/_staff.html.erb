<div class="doc-block"></div>


<div id="buttons" class="noselect">

<!-- Table for button_grouping-level positioning -->
<div class="table">

<!-- First row: main controls + tool options -->
<div class="tr">

    <div class="button_grouping">
        <button type="button" onClick="playSound(this)">play</button>

        <div class="table">

            <div class="tr">
                <div class="td">Volume:</div>

                <div class="td">
                    <div class="range_wrapper">
                        <input type="range" min="0.0" max="1.0" step="0.01" value ="0.1" id="slider" onchange="changeVolume(event)"/>
                    </div>
                </div>

                <div class="td">
                    <label><input type="checkbox" id="mute" onchange="toggleMute();"/> Mute</label>
                </div>
            </div>

            <div class="tr">
                <div class="td">Decay:</div>

                <div class="td">
                    <div class="range_wrapper">
                        <input type="range" min="0" max="255" step="1" value="60" id="robo_decay" />
                    </div>

                </div>

                <div class="td">
                    <label><input type="checkbox" id="decay_enabled" onchange="toggleDecay();" /> Enabled</label>
                </div>
            </div>

            <div class="tr">
                <div class="td">Bit rate:</div>

                <div class="td">
                    <select id="js_node_buffer_size">
                        <option>256</option>
                        <option selected=selected>512</option>
                        <option>1024</option>
                        <option>2048</option>
                        <option>4096</option>
                        <option>8192</option>
                        <option>16384</option>
                    </select>
                </div>

                <div class="td"></div>
            </div>

        </div>
    </div>

    <div class="td">
        <div class="button_grouping">
            <!-- <button type="button" onClick="animateLine(this)">animate</button> -->

            <button type="button" onClick="resetStaff()">clear</button>
            <!--
            <button type="button" onClick="clearRed()">clear red</button>
            <button type="button" onClick="clearGreen()">clear green</button>
            <button type="button" onClick="clearBlue()">clear blue</button>
            -->
        </div>


        <div class="button_grouping">


            <button type="button" onClick="switchToolStyle(this)">eraser</button>

            <div class="range_wrapper">
                <input type="range" min="1" max="15" step="1" value ="5" id="pen_stroke_width" onchange="changePenStrokeWidth($(this).val());"/>
            </div>

            <!-- Layer/Color selection table -->

            <div id="layer_control_table" class="table">

                <div class="th">

                    <div class="td">Layer</div>
                    <div class="td">On</div>
                    <div class="td">Wave</div>
                    <div class="td">Clear</div>
                </div>

                <!-- RED -->
                <div class="tr">

                    <div class="td">
                        <label>
                            <input type="radio" name="layer_select" value="COLOR_RED">
                            <div id="red_layer_label" class="layer_control_color_label">
                                Red
                            </div>
                        </label>
                    </div>
                    <div class="td">
                        <label><input type="checkbox" id="red_toggle" onclick="toggleLayer(COLOR_RED);" checked=checked></label>
                    </div>

                    <div class="td">
                        <select id="dspwave_red">
                            <option value="DSP.SINE">SINE</option>
                            <option value="DSP.SAW"> SAW </option>
                            <option value="DSP.SQUARE"> SQUARE </option>
                            <option value="DSP.TRIANGLE"> TRIANGLE </option>
                        </select>
                    </div>

                    <div class="td">
                        <button type="button" onClick="clearRed()">X</button>
                    </div>
                </div>


                <!-- GREEN -->
                <div class="tr">


                    <div class="td">
                        <label>
                            <input type="radio" name="layer_select" value="COLOR_GREEN">
                            <div id="green_layer_label" class="layer_control_color_label">
                                Green
                            </div>
                        </label>
                    </div>
                    <div class="td">
                        <label><input type="checkbox" id="green_toggle" onclick="toggleLayer(COLOR_GREEN);" checked=checked></label>
                    </div>

                    <div class="td">
                        <select id="dspwave_green">
                            <option value="DSP.SINE">SINE</option>
                            <option value="DSP.SAW"> SAW </option>
                            <option value="DSP.SQUARE"> SQUARE </option>
                            <option value="DSP.TRIANGLE"> TRIANGLE </option>
                        </select>
                    </div>

                    <div class="td">
                        <button type="button" onClick="clearGreen()">X</button>
                    </div>
                </div>

                <!-- BLUE -->
                <div class="tr">

                    <div class="td">
                        <label>
                            <input type="radio" name="layer_select" value="COLOR_BLUE">
                            <div id="blue_layer_label" class="layer_control_color_label">
                                Blue
                            </div>
                        </label>
                    </div>

                    <div class="td">
                        <label><input type="checkbox" id="blue_toggle" onclick="toggleLayer(COLOR_BLUE);" checked=checked></label>
                    </div>

                    <div class="td">
                        <select id="dspwave_blue">
                            <option value="DSP.SINE">SINE</option>
                            <option value="DSP.SAW"> SAW </option>
                            <option value="DSP.SQUARE"> SQUARE </option>
                            <option value="DSP.TRIANGLE"> TRIANGLE </option>
                        </select>
                    </div>

                    <div class="td">
                        <button type="button" onClick="clearBlue()">X</button>
                    </div>
                </div>


            </div>

            <!-- End Layer/Color selection table -->

        </div>
    </div>
</div>

